<?xml version="1.0" encoding="UTF-8"?>
<project name="APP" default="zip" basedir="..">

	<property name="project-name" value="${ant.project.name}" />
	<property name="folder-to-zip" value="${basedir}" />
	<property name="unzip-destination" value="${basedir}/target" />

	<target name="clean">
		<delete file="*.zip" />
		<delete dir="${unzip-destination}" />
	</target>

	<target name="zip" depends="clean">
		<zip destfile="${basedir}/target/${project-name}.zip" basedir="${folder-to-zip}" excludes="build/**,target/**"  />
	</target>

</project>
